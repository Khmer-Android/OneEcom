        <!--Styling Theme-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto</item>

        <!--Styling Text-->
        <item name="android:textViewStyle">@style/BaseTextViewStyle</item>

        <!--Styling Widget(s)-->

        <!--Styling Button-->
        <item name="buttonStyle">@style/BaseButtonStyle</item>
        <item name="materialButtonStyle">@style/BaseButtonStyle</item>
    </style>

    <style name="BaseAppTheme.AppTheme" />

    <style name="BaseAppTheme.FullScreenTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
    </style>

    <style name="BaseButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
    </style>

    <style name="CustomProgressDialog" parent="android:Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
